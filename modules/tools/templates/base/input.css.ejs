/*
 * <%= company.name %> Theme - Tailwind CSS Input
 *
 * This file is processed by Tailwind CSS to generate style.css
 * Run: npm run build
 */

@tailwind base;
@tailwind components;
@tailwind utilities;

/* Custom CSS Variables */
:root {
    --color-primary: <%= branding.primary_color %>;
    --color-secondary: <%= branding.secondary_color %>;
    <%_ if (branding.accent_color) { _%>
    --color-accent: <%= branding.accent_color %>;
    <%_ } _%>
    --font-sans: '<%= branding.font_family %>', system-ui, sans-serif;
    <%_ if (branding.font_heading) { _%>
    --font-heading: '<%= branding.font_heading %>', Georgia, serif;
    <%_ } _%>
}

/* Base Layer Overrides */
@layer base {
    html {
        scroll-behavior: smooth;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    body {
        @apply text-gray-700 leading-relaxed;
    }

    /* Heading Styles */
    h1 {
        @apply text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight;
    }

    h2 {
        @apply text-3xl md:text-4xl font-bold text-gray-900 leading-tight;
    }

    h3 {
        @apply text-2xl md:text-3xl font-bold text-gray-900;
    }

    h4 {
        @apply text-xl md:text-2xl font-bold text-gray-900;
    }

    h5 {
        @apply text-lg md:text-xl font-semibold text-gray-900;
    }

    h6 {
        @apply text-base font-semibold text-gray-900;
    }

    /* Link Styles */
    a {
        @apply transition-colors duration-200;
    }

    /* Focus Styles for Accessibility */
    :focus-visible {
        @apply outline-none ring-2 ring-offset-2;
        ring-color: var(--color-primary);
    }
}

/* Component Layer */
@layer components {
    /* Buttons */
    .btn {
        @apply inline-flex items-center justify-center px-6 py-3 font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2;
    }

    .btn-primary {
        @apply btn text-white;
        background-color: var(--color-primary);
    }

    .btn-primary:hover {
        @apply opacity-90 transform -translate-y-0.5;
    }

    .btn-primary:focus {
        ring-color: var(--color-primary);
    }

    .btn-secondary {
        @apply btn border-2;
        border-color: var(--color-primary);
        color: var(--color-primary);
    }

    .btn-secondary:hover {
        background-color: var(--color-primary);
        @apply text-white;
    }

    .btn-white {
        @apply btn bg-white text-gray-900 hover:bg-gray-100;
    }

    /* Cards */
    .card {
        @apply bg-white rounded-xl shadow-md overflow-hidden transition-shadow duration-300;
    }

    .card:hover {
        @apply shadow-xl;
    }

    .card-body {
        @apply p-6;
    }

    /* Sections */
    .section {
        @apply py-16 md:py-24;
    }

    .section-sm {
        @apply py-12 md:py-16;
    }

    .section-lg {
        @apply py-20 md:py-32;
    }

    /* Container */
    .container-custom {
        @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8;
    }

    .container-narrow {
        @apply max-w-4xl mx-auto px-4 sm:px-6 lg:px-8;
    }

    /* Form Elements */
    .form-input {
        @apply block w-full rounded-lg border-gray-300 shadow-sm transition-colors duration-200;
    }

    .form-input:focus {
        border-color: var(--color-primary);
        ring-color: var(--color-primary);
    }

    .form-label {
        @apply block text-sm font-medium text-gray-700 mb-1;
    }

    .form-error {
        @apply text-sm text-red-600 mt-1;
    }

    /* Badge */
    .badge {
        @apply inline-flex items-center px-3 py-1 rounded-full text-sm font-medium;
    }

    .badge-primary {
        background-color: var(--color-primary);
        @apply text-white;
    }

    /* Divider */
    .divider {
        @apply border-t border-gray-200 my-8;
    }
}

/* Utility Layer */
@layer utilities {
    /* Text Colors */
    .text-primary {
        color: var(--color-primary);
    }

    .text-secondary {
        color: var(--color-secondary);
    }

    /* Background Colors */
    .bg-primary {
        background-color: var(--color-primary);
    }

    .bg-secondary {
        background-color: var(--color-secondary);
    }

    /* Border Colors */
    .border-primary {
        border-color: var(--color-primary);
    }

    /* Gradient */
    .gradient-primary {
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    }

    /* Animation Utilities */
    .animate-fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }

    .animate-slide-up {
        animation: slideUp 0.5s ease-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Aspect Ratios */
    .aspect-video {
        aspect-ratio: 16 / 9;
    }

    .aspect-square {
        aspect-ratio: 1 / 1;
    }

    /* Text Balance */
    .text-balance {
        text-wrap: balance;
    }
}
