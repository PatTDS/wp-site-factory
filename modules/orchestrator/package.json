{
  "name": "@wpf/orchestrator",
  "version": "0.1.0",
  "description": "WPF Orchestrator - LLM-powered research and content generation for Discovery Phase",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "wpf-research": "./src/cli/research.js",
    "wpf-blueprint": "./src/cli/blueprint.js"
  },
  "scripts": {
    "research": "node src/cli/research.js",
    "blueprint": "node src/cli/blueprint.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:lighthouse": "lhci autorun",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.1",
    "archiver": "^7.0.1",
    "dotenv": "^17.2.3",
    "ora": "^9.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "vitest": "^2.1.9"
  },
  "keywords": [
    "wpf",
    "wordpress",
    "llm",
    "research",
    "content-generation"
  ],
  "author": "WPF Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
