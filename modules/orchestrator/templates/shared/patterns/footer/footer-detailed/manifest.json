{
  "id": "footer-detailed",
  "name": "Detailed Footer",
  "description": "Comprehensive footer with company description, multiple navigation columns, newsletter signup, trust badges, and contact information. Best for enterprise and professional services.",
  "category": "footer",
  "variants": ["default", "with-map"],
  "configuration": {
    "variant": {
      "type": "enum",
      "options": ["default", "with-map"],
      "default": "default",
      "description": "Footer layout variant"
    },
    "show_newsletter": {
      "type": "boolean",
      "default": true,
      "description": "Show newsletter signup form"
    },
    "show_badges": {
      "type": "boolean",
      "default": true,
      "description": "Show trust badges row"
    },
    "show_map": {
      "type": "boolean",
      "default": false,
      "description": "Show location map"
    },
    "columns": {
      "type": "number",
      "default": 5,
      "description": "Number of navigation columns (3-6)"
    }
  },
  "content_slots": {
    "logo_url": {
      "required": false,
      "source": "assets.logo.url",
      "fallback": ""
    },
    "logo_alt": {
      "required": false,
      "source": "client_profile.company.name",
      "fallback": "Company Logo"
    },
    "description": {
      "required": false,
      "source": "client_profile.company.description",
      "fallback": ""
    },
    "nav_columns": {
      "required": true,
      "source": "content_drafts.navigation.footer_columns_detailed",
      "fallback": [
        {
          "title": "Products",
          "links": [
            {"label": "Enterprise", "url": "#enterprise"},
            {"label": "Small Business", "url": "#smb"},
            {"label": "Pricing", "url": "#pricing"},
            {"label": "Features", "url": "#features"}
          ]
        },
        {
          "title": "Company",
          "links": [
            {"label": "About Us", "url": "#about"},
            {"label": "Careers", "url": "#careers"},
            {"label": "Press", "url": "#press"},
            {"label": "Partners", "url": "#partners"}
          ]
        },
        {
          "title": "Resources",
          "links": [
            {"label": "Blog", "url": "#blog"},
            {"label": "Documentation", "url": "#docs"},
            {"label": "Help Center", "url": "#help"},
            {"label": "API Reference", "url": "#api"}
          ]
        },
        {
          "title": "Support",
          "links": [
            {"label": "Contact", "url": "#contact"},
            {"label": "System Status", "url": "#status"},
            {"label": "Security", "url": "#security"},
            {"label": "Community", "url": "#community"}
          ]
        }
      ]
    },
    "newsletter_title": {
      "required": false,
      "source": "content_drafts.footer.newsletter_title",
      "fallback": "Subscribe to our newsletter"
    },
    "newsletter_description": {
      "required": false,
      "source": "content_drafts.footer.newsletter_description",
      "fallback": "Get the latest updates, insights, and exclusive offers delivered to your inbox."
    },
    "trust_badges": {
      "required": false,
      "source": "assets.trust_badges",
      "fallback": []
    },
    "contact_info": {
      "required": false,
      "source": "client_profile.contact",
      "fallback": {
        "phone": "",
        "email": "",
        "address": ""
      }
    },
    "social_links": {
      "required": false,
      "source": "client_profile.contact.social_media",
      "fallback": []
    },
    "copyright": {
      "required": false,
      "source": "client_profile.company.name",
      "fallback": "Company Name"
    }
  },
  "tailwind_classes": {
    "footer": "bg-gray-900 text-white",
    "container": "max-w-7xl mx-auto px-4 sm:px-6 lg:px-8",
    "newsletter_section": "bg-gradient-to-r from-primary-600 to-primary-700 rounded-2xl p-8 md:p-12",
    "main": "py-16",
    "grid": "grid gap-8",
    "column": "space-y-4",
    "heading": "text-sm font-semibold uppercase tracking-wider text-gray-300",
    "link": "text-gray-400 hover:text-white transition-colors",
    "contact_item": "flex items-start gap-3 text-gray-400",
    "badges": "flex flex-wrap items-center justify-center gap-8 py-8 border-t border-b border-gray-800",
    "copyright_bar": "py-6"
  },
  "suitability": {
    "industries": ["enterprise", "professional-services", "saas", "technology", "finance"],
    "styles": ["corporate", "professional", "modern", "tech"],
    "score_factors": {
      "complex_offerings": 0.3,
      "enterprise_client": 0.3,
      "multiple_locations": 0.2,
      "b2b_focus": 0.2,
      "large_organization": 0.2
    }
  },
  "template_file": "template.php"
}
