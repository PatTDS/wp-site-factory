    remove_filter( 'the_content_feed', 'wp_staticize_emoji' );
    remove_filter( 'comment_text_rss', 'wp_staticize_emoji' );
    remove_filter( 'wp_mail', 'wp_staticize_emoji_for_email' );
}
add_action( 'init', '{{theme_slug}}_disable_emojis' );

/**
 * Optimize WordPress for performance
 */
function {{theme_slug}}_performance_optimizations() {
    // Remove WordPress version from head
    remove_action( 'wp_head', 'wp_generator' );

    // Remove Windows Live Writer manifest link
    remove_action( 'wp_head', 'wlwmanifest_link' );

    // Remove the REST API link from head
    remove_action( 'wp_head', 'rest_output_link_wp_head' );

    // Remove oEmbed discovery links
    remove_action( 'wp_head', 'wp_oembed_add_discovery_links' );

    // Disable embeds
    remove_action( 'wp_head', 'wp_oembed_add_host_js' );
}
add_action( 'init', '{{theme_slug}}_performance_optimizations' );

