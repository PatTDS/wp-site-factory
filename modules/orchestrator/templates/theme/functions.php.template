/**
 * Add fetchpriority="high" to hero images
 */
function {{theme_slug}}_add_fetchpriority_to_hero( $attr, $attachment, $size ) {
    if ( is_front_page() && in_the_loop() && 'full' === $size ) {
        $attr['fetchpriority'] = 'high';
    }
    return $attr;
}
add_filter( 'wp_get_attachment_image_attributes', '{{theme_slug}}_add_fetchpriority_to_hero', 10, 3 );

/**
 * Disable emoji scripts for performance
 */
