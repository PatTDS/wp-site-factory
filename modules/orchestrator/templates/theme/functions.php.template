/**
 * Enqueue scripts and styles
 */
function {{theme_slug}}_scripts() {
    // Main stylesheet
    wp_enqueue_style(
        '{{theme_slug}}-style',
        get_stylesheet_uri(),
        array(),
        wp_get_theme()->get( 'Version' )
    );

    // Tailwind CSS (compiled)
    wp_enqueue_style(
        '{{theme_slug}}-tailwind',
        get_template_directory_uri() . '/assets/css/tailwind.css',
        array(),
        wp_get_theme()->get( 'Version' )
    );

    // Main script
    wp_enqueue_script(
        '{{theme_slug}}-script',
        get_template_directory_uri() . '/assets/js/main.js',
        array(),
        wp_get_theme()->get( 'Version' ),
        true
    );

    // Add inline font display optimization
    wp_add_inline_style( '{{theme_slug}}-style', ':root { font-display: swap; }' );
}
add_action( 'wp_enqueue_scripts', '{{theme_slug}}_scripts' );

