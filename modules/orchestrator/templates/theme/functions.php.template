/**
 * Helper function to get social media links
 */
function {{theme_slug}}_get_social_links() {
    $social_networks = array( 'facebook', 'twitter', 'instagram', 'linkedin', 'youtube' );
    $links = array();

    foreach ( $social_networks as $network ) {
        $url = get_theme_mod( '{{theme_slug}}_social_' . $network );
        if ( ! empty( $url ) ) {
            $links[ $network ] = esc_url( $url );
        }
    }

    return $links;
}

